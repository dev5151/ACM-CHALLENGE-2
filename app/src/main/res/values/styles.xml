<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextBox" parent="AppTheme">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">#ffffff</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeColor">@color/orangePrimary</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

</resources>
